@page
@model IndexModel
@{
    ViewData["Title"] = "Mina sidor";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="main">
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Fyll i användarnamn." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Fyll i ditt telefonnummer"/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Spara</button>
        </form>
    </div>
</div>

    <a class="" asp-area="" asp-controller="Products" asp-action="ProductsByUser">Mina annonser</a>
    <a class="" asp-area="" asp-controller="Bids" asp-action="Index">Mina bud</a>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
