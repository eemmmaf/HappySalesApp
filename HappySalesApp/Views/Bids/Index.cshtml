@model IEnumerable<HappySalesApp.Models.HappySales.Models.Bid>

@{
    ViewData["Title"] = "Index";
}
<section class="main">
    <h1>@ViewData["Title"]</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr><td>Du har inte lagt några bud ännu</td></tr>
            }else{
                <!--Loopar igenom-->
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Description)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BidId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BidId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.BidId">Delete</a>
                    </td>
                </tr>

                }
            }
        </tbody>
    </table>
</section>
