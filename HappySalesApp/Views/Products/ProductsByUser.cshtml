@model IEnumerable<HappySalesApp.Models.HappySales.Models.Product>


@{
    ViewData["Title"] = "Mina annonser";
}


<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>Beskrivning</th>
            <th>Pris</th>
            <th>Kategori</th>
            <th>Publicerad</th>
            <th>Senast ändrad</th>
            <th>Bild</th>
        </tr>
    </thead>
    <tbody>
       @if(Model.Count() > 0){
        @foreach (var products in Model)
        {
            <tr>
                <td>@products.Name</td>
                <td>@products.Description</td>
                <td>@products.Price</td>
                <td>@products.CreatedDate</td>
                <td>@products.LastModifiedDate</td>
                <td> <img decoding="async" src="@("~/uploadedimages/"+@products.ImageName)" asp-append-version="true" width="100px" height="100px" /></td>
                <td><a asp-action="Edit" asp-route-id="@products.Id">Ändra</a></td>
                <td><a asp-action="Delete" asp-route-id="@products.Id">Ta bort</a></td>
                </tr>
                }
        }else{
        <tr><td>Du har inte skapat några annonser</td></tr>
        }
    </tbody>
</table>
