@model HappySalesApp.ViewModels.ProductsAndCategoriesViewModel

@{
    ViewData["Title"] = "Sökresultat";
}


<div class="main">
    <h2 id="centered">Sökresultat</h2>
    <div class="products-flex">
        @if (Model.Products.Count() > 0)
        {
            foreach (var item in Model.Products)
            {

                <div>
                    <a href="@Url.Action("Details", "Products", new { id = item.Id })">
                        <img decoding="async" src="@("~/uploadedimages/"+item.ImageName)" asp-append-version="true" width="230px" height="230px" alt="@item.AltText" />
                        <h3>@item.Name</h3>
                        <p>@item.Description</p>
                        <p>@item.Price</p>
                    </a>
                </div>
            }
        }
        else
        {
            <p>Ingen annons matchade din sökning</p>
        }

    </div>
</div>