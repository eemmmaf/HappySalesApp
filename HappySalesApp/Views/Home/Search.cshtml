@model HappySalesApp.ViewModels.ProductsAndCategoriesViewModel

@{
    ViewData["Title"] = "Sökresultat";
}


<div class="main">
    <h2 id="centered">Sökresultat</h2>
    <div class="flex-index">
        @if (Model.Products.Count() > 0)
        {
            <h3>Annonser</h3>
            foreach (var item in Model.Products)
            {

                <div class="product">
                    <a href="@Url.Action("Details", "Products", new { id = item.Id })">
                        <img src="@item.ImageName" alt="@item.AltText" />
                        <h3>@item.Name</h3>
                        <p>@item.Description</p>
                        <p>@item.Price</p>
                    </a>
                </div>
            }
        }
        else if (Model.Categories.Count() > 0)
        {
            <h3>Kategorier</h3>
            foreach (var item in Model.Categories)
            {

                <div class="product">
                    <a href="@Url.Action("ProductsByCategory", "Products", new { id = item.CategoryId })">
                        <h3>@item.CategoryName</h3>
                    </a>
                </div>
            }
        }
        else if (Model.Categories.Count() == 0 || Model.Products.Count() == 0)
        {

                    <p class="notfound">Inget matchade ditt sökresultat</p>

        }
    </div>
</div>